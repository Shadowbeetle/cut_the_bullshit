<div>
  <Form
    for={@changeset}
    change="validate"
    submit="save">
  
    <TextArea field={:text} />
    <ErrorTag field={:text} />
  
    <div>
      <button type="submit" phx-disable-with="Saving...">
        {#if @action == :new_comment}
          Add comment
        {#else}
          Save
        {/if}
      </button>
    </div>
  </Form>
</div>

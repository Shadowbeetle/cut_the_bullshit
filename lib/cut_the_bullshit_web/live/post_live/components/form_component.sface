<div>
  <h2>{@title}</h2>

  <Form
    for={@changeset}
    change="validate"
    submit="save">
  
    <Label field={:title} />
    <TextInput field={:title} />
    <ErrorTag field={:title} />
  
    <Label field={:description} />
    <TextArea field={:description} />
    <ErrorTag field={:description} />
  
    <Label field={:url} />
    <TextInput field={:url} />
    <ErrorTag field={:url} />
  
    <div>
      <button type="submit">Save</button>
    </div>
  </Form>
</div>
